import 'package:flutter/material.dart';

class ShowNotificationScreen extends StatefulWidget {
  const ShowNotificationScreen({super.key});

  @override
  State<ShowNotificationScreen> createState() => _ShowNotificationScreenState();
}

class _ShowNotificationScreenState extends State<ShowNotificationScreen> {
  bool _showNotification = false;

  @override
  void initState() {
    super.initState();
    Future.delayed(Duration(seconds: 1), () {
      setState(() {
        _showNotification = true;
      });
      Future.delayed(Duration(seconds: 2), () {
        setState(() {
          _showNotification = false;
        });
      });
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Stack(
        children: [
          Container(
            decoration: const BoxDecoration(
              image: DecorationImage(
                image: AssetImage('assets/images/mockup.jpg'),
                fit: BoxFit.cover,
              ),
            ),
          ),
          Positioned(
            top: 160,
            left: 0,
            right: 0,
            child: Column(
              children: [
                Text(
                  '4월 6일 수요일',
                  style: TextStyle(fontSize: 20),
                ),
                SizedBox(height: 1),
                Text(
                  '11:00',
                  style: TextStyle(fontSize: 60, fontWeight: FontWeight.bold),
                ),
              ],
            ),
          ),
          Positioned(
            bottom: 220,
            left: 50,
            right: 50,
            child: AnimatedContainer(
              width: 40.0,
              duration: Duration(milliseconds: 500),
              height: _showNotification ? 100 : 0,
              decoration: BoxDecoration(
                border: Border.all(
                  color: Colors.black,
                  width: 1,
                ),
                color: Colors.white,
                borderRadius: BorderRadius.circular(10),
              ),
              margin: EdgeInsets.only(
                left: 10,
                right: 10,
              ),
              child: Column(
                children: [
                  Text('세종기숙사 3/21(화) 중식메뉴'),
                  Text(
                      '백미밥/보리밥, 맑은버섯탕, 짬뽕숙주불고기, 잡채말이어묵볶음, 봄동겉절이, 깍두기, *델로스쿠키*'),
                ],
              ),
            ),
          ),
        ],
      ),
    );
  }
}